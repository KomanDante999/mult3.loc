{{ header }}
<div
	id="product-search">
	{# breadcrumbs #}
	<div class="row px-xl-5">
		<div class="col-12">
			<nav class="breadcrumb bg-light mb-30">
				{% for breadcrumb in breadcrumbs %}
					{% if loop.last %}
						<span class="active breadcrumb-item">{{ breadcrumb.text }}</span>
					{% else %}
						<a class="breadcrumb-item text-dark" href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
					{% endif %}
				{% endfor %}
			</nav>
		</div>
	</div>

	{# Shop #}
	<div class="container-fluid">
		<div class="row  px-xl-5">
			{{ column_left }}
			{% if column_left and column_right %}
				{% set class, card = 'col-lg-6 col-md-8', 'col-lg-6' %}
			{% elseif column_left or column_right %}
				{% set class, card = 'col-lg-9 col-md-8', 'col-lg-4' %}
			{% else %}
				{% set class, card = 'col-12', 'col-lg-3' %}
			{% endif %}

			{# show product #}
			<div class="{{ class }}">
				<div class="row pb-3">
					{% if products %}
						<div class="col-sm-6">
							<div class="input-group mb-3">
								<div class="input-group-prepend">
									<label for="sort-select" class="input-group-text">{{ text_sort }}</label>
								</div>
								<select class="custom-select" id="input-sort" onchange="location = this.value;">
									{% for sorts in sorts %}{% endfor %}
								</select>
							</div>
						</div>
					{% endif %}
				</div>
			</div>

		</div>

	</div>

</div>
{{ footer }}
