<div class="container-fluid py-5">
	<div class="row px-xl-5">
		<div class="col">
			<div class="owl-carousel vendor-carousel">
				{% for banner in banners %}
					<div class="bg-light p-4">
						{% if banner.link %}
							<a href="{{ banner.link }}">
								<img src="{{ banner.image }}" alt="{{ banner.title }}">
							</a>
						{% else %}
							<img src="{{ banner.image }}" alt="{{ banner.title }}">
						{% endif %}
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
</div>


